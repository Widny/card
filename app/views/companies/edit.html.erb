<h1> Update Company Info</h1>

<%= form_for :company, url: company_path(@company), method: :patch do |f| %>
	<% if @company.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@company.errors.count, "error") %>
			prohibited this article from being saved:
		</h2>
		<ul>
		<% @company.errors.full_message.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>


	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %> 
	</p>

	<p>
		<%= f.label :firefly_api_key %><br>
		<%= f.text_field :firefly_api_key %>
	</p>

	<p>
		<%= f.label :token_api_key %><br>
		<%= f.text_field :token_api_key %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>